{% extends "page.twig" %}

{% block banner %}
	<section class="banner banner--overlay banner--overlap" style="background-image: url('{{post.thumbnail}}');">
	    <div class="grid grid--container">
	        <h1 class="banner__header">Blog</h1>
	    </div>
	</section>
{% endblock %}

{% block content %}
	{% for post in posts %}
		{% include ['excerpt-'~post.post_type~'.twig', 'excerpt.twig'] %}
	{% endfor %}
{% endblock %}
