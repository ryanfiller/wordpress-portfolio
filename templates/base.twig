<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{site.language_attributes}}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{site.language_attributes}}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{site.language_attributes}}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" {{site.language_attributes}}> <!--<![endif]-->
	<head>
	    <meta charset="{{site.charset}}" />
	        <title>
	            {% if wp_title %}
	                {{ wp_title }} - {{ site.name }}
	            {% else %}
	                {{ site.name }}
	            {% endif %}
	        </title>
	    <meta name="description" content="{{site.description}}">
	    <link rel="stylesheet" href="{{site.theme.link}}/style.css" type="text/css" media="screen" />
	    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <link rel="pingback" href="{{site.pingback_url}}" />
	    {{function('wp_head')}}
	</head>

	<body class="{{body_class}}" data-template="base.twig">

		{% block header %}
			{% include 'components/header.twig' %}
		{% endblock %}

		{% block banner %}
			<section class="banner {% block bannertype %}{% endblock %}" style="background-image: url('{{post.thumbnail}}');">
				{% include 'components/banner.twig' %}
			</section>
		{% endblock %}

		<main class="page-content {% block grid %}grid{% endblock %}">
			<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
				{% block content %}
				{% endblock %}
			</article>
		</main>

		{% block footer %}
			{% include 'components/footer.twig' %}
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
